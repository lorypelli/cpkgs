{
    "name": "cpkgs",
    "version": "2.1.1",
    "description": "A CLI application to easily install C modules and run your code fast.",
    "scripts": {
        "dev": "nodemon",
        "format": "prettier --write .",
        "postinstall": "node scripts/index.js",
        "start": "pnpm format && node scripts/index.js"
    },
    "type": "module",
    "repository": {
        "url": "https://github.com/lorypelli/cpkgs"
    },
    "files": [
        "./cmd/",
        "./pkg/",
        "./scripts/",
        "main.go",
        "go.mod",
        "nodemon.json"
    ],
    "keywords": [
        "go",
        "c",
        "package",
        "packages",
        "cli",
        "cpkgs"
    ],
    "author": "LoryPelli",
    "readme": "README.md",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^22.1.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "prettier-plugin-organize-imports": "^4.0.0"
    },
    "dependencies": {
        "chalk": "^5.3.0"
    }
}
